{
  "version": 2,
  "builds": [
    { "src": "whatsapp.js", "use": "@vercel/node" },
    { "src": "webhook.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "app.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/whatsapp", "dest": "whatsapp.js" },
    { "src": "/api/webhook", "dest": "webhook.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
